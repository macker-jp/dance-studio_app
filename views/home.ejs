    <div class="d-flex justify-content-center align-items-center vh-80">
        <div class="card shadow px-3" id="card-home">
            <div class="card-body">
                <h5 class="card-title text-center">ログイン</h5>
                <form action="">
                    <section class="mb-3 d-flex">
                        <!-- <label for="user-name"
                            class="form-label text-nowrap mb-0 d-flex align-items-center">ユーザーネーム：</label> -->
                        <input type="text" id="user-name" name="user-name" class="form-control input-blur input-text"
